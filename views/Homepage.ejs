<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>FreshMart</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/" class="nav-link">Home</a>
          </li>
        </ul>
    </nav>
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
        <a href="#" class="brand-link">
            <img src="fm.jpg" alt="Fresh Mart Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">FreshMart</span>
          </a>
			<!-- Sidebar -->
			<div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Add" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p>Add Product</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Update" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p class="text">Update Product</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Delete" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                <p class="text">Remove Product</p>
                            </a>
                        </li>
                    </ul>
                </nav>
			</div>
			<!-- /.sidebar -->
		</aside>
        <!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Super Market Inventory Management</h1>
			</section>
			<section class="content">
                <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Product Details</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                    <div class="card-body table-responsive p-0" style="height: 400px;">
                        <table class="table table-striped table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 10%" >Product</th>
                                <th style="width: 10%" >Type</th>
                                <th style="width: 15%" >Quantity</th>
                                <th style="width: 10%" >Price</th>
                                <th style="width: 10%" >Rating</th>
                                <th style="width: 20%" > </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Cake Mix</td>
                                <td>bakery</td>
                                <td>1kg</td>
                                <td>100</td>
                                <td>
                                    <div class="progress progress-xs">
                                      <div class="progress-bar bg-danger" style="width:20%"></div>
                                    </div>
                                    2
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/Update"><i class="fas fa-pencil-alt"></i>Edit</a>
                                    <a class="btn btn-danger btn-sm" href="/Delete" ><i class="fas fa-trash"></i>Delete</a>
                                </td>
                            </tr>
                            <tr>
                                <td>Potatoes</td>
                                <td>Vegetable</td>
                                <td>1kg</td>
                                <td>40</td>
                                <td>
                                    <div class="progress progress-xs">
                                      <div class="progress-bar bg-success" style="width:60%"></div>
                                    </div>
                                    4
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/Update"><i class="fas fa-pencil-alt"></i>Edit</a>
                                    <a class="btn btn-danger btn-sm" href="/Delete" ><i class="fas fa-trash"></i>Delete</a>
                                </td>
                            </tr>
                            <% for(var i=0;i<data.length;i++) { %>
                                <tr>
                                    <td><%= data[i].title %></td>
                                    <td><%= data[i].type %></td>
                                    <td><%= data[i].quanitity %></td>
                                    <td><%= data[i].price %></td>
                                    <td><%= data[i].rating %>
                                        <% if (data[i].rating<3) { %>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar bg-danger" style="width:20%"></div>
                                            </div> 
                                        <%} else if (data[i].rating==5) { %>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar bg-success" style="width:100%"></div>
                                            </div> 
                                        <%} else { %>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar bg-success" style="width:60%"></div>
                                            </div>
                                        <% } %>    
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm" href="/Update"><i class="fas fa-pencil-alt"></i>Edit</a>
                                        <a class="btn btn-danger btn-sm" href="/Delete" ><i class="fas fa-trash"></i>Delete</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                        </table>
                        </div>
                    </div>
                </div>
			</section>
		</div>
    </div>
    </body>
</html>